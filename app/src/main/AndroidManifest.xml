<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.comp211.quiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Arithmetic"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SingleQuiz"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Questions_List_Activity"
            android:label="@string/title_activity_questions__list_"
            android:parentActivityName=".SingleQuiz"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.comp211.quiz.SingleQuiz" />
        </activity>
        <activity
            android:name=".Scoreboard"
            android:label="Scoreboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Multiplayer"
            android:label="@string/title_activity_multiplayer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Instructions"
            android:label="@string/title_activity_instructions"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>